<div class="bg-light border p-2 col-5 offset-1" @onclick="(args) => AmenitySelectionChanged(args, Amenity.Name)">
    <h4 class="text-secondary">
        Amenities - @Amenity.Id
    </h4>
    @Amenity.Name<br/>
    @Amenity.Description<br/>
</div>

@code {
    [Parameter]
    public Model.HotelAmenity? Amenity { get; set; }
    
    [Parameter]
    public EventCallback<string> OnAmenitySelection { get; set; }

    private async Task AmenitySelectionChanged(MouseEventArgs e, string name)
    {
        await OnAmenitySelection.InvokeAsync(name);
    }
}